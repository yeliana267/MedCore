@model IEnumerable<MedCore.Web.Models.appointments.AppointmentModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mt-4 mb-4 text-center text-primary">Listado de Citas Médicas</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Cita
    </a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.PatientID)</th>
            <th>@Html.DisplayNameFor(model => model.DoctorID)</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentDate)</th>
            <th>@Html.DisplayNameFor(model => model.StatusID)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.PatientID)</td>
                <td>@Html.DisplayFor(modelItem => item.DoctorID)</td>
                <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>

                <td>
                    @if (item.StatusID == 1)
                    {
                        <span class="badge bg-success">Pendiente</span>
                    }
                    else if (item.StatusID == 2)
                    {
                        <span class="badge bg-warning text-dark">Confirmada</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Finalizada</span>
                    }
                </td>

                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                <td>
                    @Html.ActionLink("✏️", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("🔍", "Details", new { id = item.Id }) |
                    @Html.ActionLink("🗑️", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
