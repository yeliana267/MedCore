@model MedCore.Web.Models.appointments.CreateAppointmentModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mt-4 mb-4 text-primary">Crear Nueva Cita Médica</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="PatientID" class="form-label">ID del Paciente</label>
                            <input asp-for="PatientID" class="form-control" placeholder="Ej. 101" />
                            <span asp-validation-for="PatientID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DoctorID" class="form-label">ID del Doctor</label>
                            <input asp-for="DoctorID" class="form-control" placeholder="Ej. 202" />
                            <span asp-validation-for="DoctorID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="StatusID" class="form-label">Estado de la Cita</label>
                            <input asp-for="StatusID" class="form-control" placeholder="Ej. 1 = Pendiente" />
                            <span asp-validation-for="StatusID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="AppointmentDate" class="form-label">Fecha y Hora de la Cita</label>
                            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                            <input type="submit" value="Crear Cita" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
