@model MedCore.Web.Models.doctorAvailability.DoctorAvailabilityModel

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-primary mt-4">Detalles de Disponibilidad del Doctor</h2>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white">
        Información de la Disponibilidad
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">ID de Disponibilidad</dt>
            <dd class="col-sm-8">@Model.AvailabilityID</dd>

            <dt class="col-sm-4">ID del Doctor</dt>
            <dd class="col-sm-8">@Model.DoctorID</dd>

            <dt class="col-sm-4">Fecha Disponible</dt>
            <dd class="col-sm-8">@Model.AvailableDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Hora de Inicio</dt>
            <dd class="col-sm-8">@Model.StartTime</dd>

            <dt class="col-sm-4">Hora de Finalización</dt>
            <dd class="col-sm-8">@Model.EndTime</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.AvailabilityID">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
</div>
