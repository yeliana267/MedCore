@model MedCore.Web.Models.doctorAvailability.DoctorAvailabilityModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-primary mt-4">Editar Disponibilidad del Doctor</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="AvailabilityID" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="DoctorID" class="form-label"></label>
                <input asp-for="DoctorID" class="form-control" />
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AvailableDate" class="form-label"></label>
                <input asp-for="AvailableDate" type="date" class="form-control" />
                <span asp-validation-for="AvailableDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndTime" class="form-label"></label>
                <input asp-for="EndTime" type="time" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
