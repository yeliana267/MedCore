@model IEnumerable<MedCore.Web.Models.doctorAvailability.DoctorAvailabilityModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center text-primary mb-4">Disponibilidad de Doctores</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">+ Nueva Disponibilidad</a>
</div>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AvailabilityID)</th>
            <th>@Html.DisplayNameFor(model => model.DoctorID)</th>
            <th>@Html.DisplayNameFor(model => model.AvailableDate)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.EndTime)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AvailabilityID</td>
                <td>@item.DoctorID</td>
                <td>@item.AvailableDate.ToString("dd/MM/yyyy")</td>
                <td>@item.StartTime.ToString(@"hh\:mm")</td>
                <td>@item.EndTime.ToString(@"hh\:mm")</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.AvailabilityID" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.AvailabilityID" class="btn btn-sm btn-info text-white">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.AvailabilityID" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
